{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "forOf": true,
      "es6": true,
      "experimentalObjectRestSpread ": true,
      "impliedStrict": true
    }
  },
  "rules": {
    "comma-dangle": 0,
    "indent": 0,
    "func-names": 0,
    "object-curly-spacing" : 0,
    "arrow-body-style": 0,
    "no-console": 0,
    "max-len": 0,
    "prefer-template": 0,
    "import/no-unresolved": 0,
    "global-require": 0,
    "no-underscore-dangle": 0,
    "array-bracket-spacing": 0,
  },
  "globals": {
    "__DEVSERVER__": true,
    "__DEVCLIENT__": true
  }
}
